<VirtualHost *:<%= node['wordpress']['port'] %>>
  ServerName <%= node['hostname'] %>
  ServerAdmin 'webmaster@routetopa.eu'

  DocumentRoot <%= node['wordpress']['root'] %>
  <Directory "/">
          Options FollowSymLinks
          AllowOverride None
  </Directory>
  <Directory <%= node['wordpress']['root'] %> >
          Options Indexes FollowSymLinks MultiViews
          AllowOverride All
          Require all granted
  </Directory>

  ErrorLog /var/log/apache2-default/<%= node['wordpress']['alias'] %>.error.log

  LogLevel warn

  CustomLog /var/log/apache2-default/<%= node['wordpress']['alias'] %>.access.log combined
  ServerSignature Off

  AddType application/x-httpd-php .php
  AddType application/x-httpd-php-source .phps
  DirectoryIndex index.php index.html
</VirtualHost>

